<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>


    </style>

    <style name="AppTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/black</item>
    </style>

    <!-- Style for the calendar text (date numbers) -->
    <style name="CalendarTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF000000</item> <!-- Black color for the date text -->
        <item name="android:gravity">center</item>
    </style>

    <!-- Style for the calendar week day text (Sunday, Monday, etc.) -->
    <style name="CalendarWeekDayTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF888888</item> <!-- Gray color for the weekday text -->
        <item name="android:gravity">center</item>
    </style>
</resources>

