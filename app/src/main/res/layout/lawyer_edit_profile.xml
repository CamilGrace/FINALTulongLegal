<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Photo -->
        <ImageView
            android:id="@+id/lawyer_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/circle_background"
            android:contentDescription="Profile Photo"
            android:clickable="true"
            android:focusable="true" />

        <Button
            android:id="@+id/lawyer_upload_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Upload Photo" />

        <!-- Bio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bio"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lawyer_bio_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write about yourself"
            android:inputType="textMultiLine" />

        <!-- Credentials and Expertise -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Credentials"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lawyer_credentials_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., JD, Harvard Law School"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Expertise"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lawyer_expertise_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Criminal Law"
            android:inputType="text" />

        <!-- Personal Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Personal Information"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lawyer_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/lawyer_dob_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:inputType="date" />

        <!-- Contact Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Contact Information"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lawyer_phone_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/lawyer_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress" />

        <!-- Save Button -->
        <Button
            android:id="@+id/lawyer_save_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Save Profile" />

    </LinearLayout>
</ScrollView>
