<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/client_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dahsboard_bg">

        <!-- Menu Button -->
        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu_foreground" />

        <!-- Content Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TulongLegal Header -->
            <LinearLayout
                android:id="@+id/linear_tulong_legal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/img_screenshot_removebg_preview"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_transparent" />

                <TextView
                    android:id="@+id/text_tulong_legal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:lineHeight="39.01dp"
                    android:text="TulongLegal"
                    android:textColor="#FFFBFBFB"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/calendarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="October 2024"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/linear_tulong_legal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Scroll View for the content -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/calendarTitle"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Collapsible Calendar -->
                    <!-- Set to gone by default -->

                    <com.github.sundeepk.compactcalendarview.CompactCalendarView
                        android:id="@+id/compactCalendarView"
                        android:layout_width="350dp"
                        android:layout_height="300dp"
                        android:layout_marginStart="25dp"
                        app:compact_calendar_backgroundColor="@color/black"
                        app:compact_calendar_currentSelectedDayBackgroundColor="@color/colorAccent"
                        app:compact_calendar_textColor="@color/white" />

                    <Button
                        android:id="@+id/collapseButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Toggle Calendar"
                        android:layout_marginTop="10dp" />

                    <!-- Daily Schedule Title -->
                    <TextView
                        android:id="@+id/text_daily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="25dp"
                        android:text="Daily Schedule"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        tools:listitem="@layout/item_schedule" />
                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            app:itemIconSize="40dp"
            android:background="@android:color/white"
            style="@style/AppTheme.BottomNavigation"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:itemBackground="@drawable/bottom_navigation_indicator"
            app:menu="@menu/bottom_nav_menu"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled" />
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>